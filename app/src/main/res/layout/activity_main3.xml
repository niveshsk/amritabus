<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/common_google_signin_btn_text_dark_disabled"
    android:orientation="vertical"
    tools:context=".Main3Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        android:gravity="start|end"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_green_dark"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="false"
                    android:focusable="true"
                    android:inputType="textCapWords"
                    app:defaultQueryHint="Enter the Boarding point"
                    app:iconifiedByDefault="false"
                    app:queryHint="Enter the  Boarding point" />

                <com.ekalips.fancybuttonproj.FancyButton
                    android:id="@+id/button3"
                    android:layout_width="27dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|top"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:foreground="@drawable/ic_magnify_black_48dp"
                    app:f_btnStyle="stroke_fill"

                    app:f_fillColor="@android:color/transparent"
                    app:f_hideFillAfterCollapse="false"
                    app:f_progressColor="@android:color/holo_green_light"
                    app:f_strokeColor="@color/gray"
                    app:f_textColor="#000"
                    app:f_textSize="22sp" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="#00CCFF90"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="553dp"
            android:descendantFocusability="beforeDescendants"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:gravity="start|end"
            android:orientation="vertical">

            <ListView
                android:id="@+id/list4"
                android:layout_width="match_parent"
                android:layout_height="525dp"
                android:choiceMode="singleChoice"
                android:clickable="true"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:footerDividersEnabled="true"
                android:headerDividersEnabled="true"
                android:layoutMode="clipBounds"
                android:longClickable="true"
                android:nextFocusUp="@id/button3" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>